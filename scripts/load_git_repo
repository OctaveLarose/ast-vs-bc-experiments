#!/bin/bash
set -e
SCRIPT_PATH=`dirname $0`
source ${SCRIPT_PATH}/script.inc

# $1 repo-url
# $2 target-path
# $3 branch-name
if [ -d "$2" ]
then
  INFO Using existing checkout at "$2"
  exit 0
fi

INFO Cloning "$1" into "$2"
if [ -z "$3" ]
then
  git clone --depth=1 "$1" "$2"
else
  INFO Using Branch "$3"
  git clone --branch="$3" --depth=1 "$1" "$2"
fi
